{% extends 'base.html.twig' %}
{% block body %}
  <div class="row">
      <div class="medium-12 large-12 columns">
        <h4>Tasks</h4>

        <div class="medium-2 columns float-left"><a class="button" href="{{path('createTask')}}">ADD NEW TASK</a></div>

        <table class="stack">
          <thead>
            <tr>
              <th width="200">Title</th>
              <th width="200">Description</th>
              <th width="200">Created</th>
            </tr>
          </thead>
            {% for task in tasks %}
              <tr>
                <td>{{ task.title }}</td>
                <td>{{ task.description }}</td>
                <td>{{ task.date|date('d/m/Y H:i:s') }}</td>
                <td>
                  <a class="hollow button" href="{{ path("editTask", { 'id': task.id }) }}">EDIT</a>
                  <a class="hollow button warning" href="{{ path("deleteTask", { 'id': task.id }) }}">DELETE</a>
                </td>
              </tr>
            {% endfor %}
          </tbody>
        </table>
        
      </div>
    </div>

{% endblock %}